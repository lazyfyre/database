{
  "name": "@storage-unit/database",
  "version": "1.0.0",
  "files": [
    "lib/**/*.js",
    "browser-version/**/*.js",
    "index.js",
    "index.d.ts"
  ],
  "types": "index.d.ts",
  "author": {
    "name": "Mitch Myburgh",
    "email": "mitchmyburgh@gmail.com",
    "url": "https://mitchmyburgh.com/"
  },
  "description": "File-based embedded data store for node.js",
  "keywords": [
    "database",
    "datastore",
    "embedded"
  ],
  "homepage": "https://github.com/lazyfyre/database",
  "repository": {
    "type": "git",
    "url": "git@github.com:lazyfyre/database.git"
  },
  "dependencies": {
    "@seald-io/binary-search-tree": "^1.0.3",
    "localforage": "^1.10.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^1.18.1",
    "@types/chai": "^4.3.5",
    "@types/expect": "^24.3.0",
    "@types/jest": "^29.5.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.4",
    "browser-resolve": "^2.0.0",
    "chai": "^4.3.7",
    "commander": "^10.0.1",
    "events": "^3.3.0",
    "jest": "^29.5.0",
    "jsdoc-to-markdown": "^8.0.0",
    "karma": "^6.4.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^2.0.1",
    "karma-source-map-support": "^1.4.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-native": "^0.71.8",
    "semver": "^7.5.1",
    "source-map-loader": "^4.0.1",
    "standard": "^17.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "timers-browserify": "^2.0.12",
    "ts-jest": "^29.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "xvfb-maybe": "^0.2.1"
  },
  "scripts": {
    "build": "tsc",
    "lint": "standard",
    "test": "ts-mocha -p tsconfig.json test/**/*.test.ts --reporter spec --timeout 10000",
    "build:browser": "webpack && webpack --optimization-minimize",
    "pretest:browser": "npm run build:browser",
    "test:browser": "xvfb-maybe karma start karma.conf.local.js",
    "test:react-native": "jest test/react-native",
    "test:typings": "tsc ./typings-tests.ts",
    "prepublishOnly": "npm run build:browser",
    "generateDocs:markdown": "jsdoc2md --no-cache -c jsdoc.conf.js --param-list-format list --files ./lib/*.js > API.md"
  },
  "main": "index.js",
  "browser": {
    "./lib/customUtils.js": "./browser-version/lib/customUtils.js",
    "./lib/storage.js": "./browser-version/lib/storage.browser.js",
    "./lib/byline.js": "./browser-version/lib/byline.js"
  },
  "react-native": {
    "./lib/customUtils.js": "./browser-version/lib/customUtils.js",
    "./lib/storage.js": "./browser-version/lib/storage.react-native.js",
    "./lib/byline.js": "./browser-version/lib/byline.js"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "standard": {
    "ignore": [
      "browser-version/out",
      "**/*.ts"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "resolver": "<rootDir>/test/react-native/resolver.js"
  }
}
